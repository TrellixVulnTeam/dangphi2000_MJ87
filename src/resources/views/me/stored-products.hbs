<!-- JavaScript Bundle with Popper -->


<div class="mt-4">
    <h3 class="san_pham_cua_toi_1">SAN PHAM CUA TOI</h3>
    <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">TEN SAN PHAM</th>
      <th scope="col">TRINH DO</th>
      <th scope="col">THOI GIAN TAO</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.createAt}}</td>
      
      <td>
          <a href="/products/{{this._id}}/edit" class="btn btn-link">Sua</a>
          <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-course-modal">Xoa</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>


<div class="modal fade" id="delete-course-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xoa san pham?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Ban co chac muon xoa san pham nay khong?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Huy</button>
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xoa bo</button>
      </div>
    </div>
  </div>
</div>

   <form name="delete-course-form" method="POST"></form>

   

<script>

  document.addEventListener('DOMContentLoaded',function() {
     var courseId;
     var deleteForm = document.forms['delete-course-form'];
     var btnDeleteCourse=document.getElementById('btn-delete-course')
     $('#delete-course-modal').on('show.bs.modal', function (event) {
     

      
  var button = $(event.relatedTarget); 
 courseId= button.data('id');  
  
    

  });
  


btnDeleteCourse.onclick = function () {
 deleteForm.action = '/products/'+ courseId + '?_method=DELETE'
 deleteForm.submit()
 }
  })
 
 
  
</script>


   

