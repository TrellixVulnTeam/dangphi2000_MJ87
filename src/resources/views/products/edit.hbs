<div class="mt-4">


    <h3 class="san_pham_cua_toi_2"> Cap nhap SAN PHAM </h3>

    <form method="POST" action="/products/{{products._id}}?_method=put">

  <div class="form-group">
    <label for="name"> Ten san pham </label>
    <input type="text" class="form-control" value="{{products.name}}" id="name" name="name">
    
  </div>

  <div class="form-group">
    <label for="description">Mo ta</label>
    <textarea  class="form-control"  id="description" name="description">{{products.description}}</textarea>
    
  </div>

  <div class="form-group">
    <label for="image">Hinh anh</label>
    <input type="text" class="form-control" id="image" name="image">
    
  </div> 
  
  
  
 
  <button type="submit" class="btn btn-primary">LUU LAI SAN PHAM</button>
</form>
</div>